{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "jsxFactory": "h",
    "module": "esnext",   // Asegúrate de que el módulo es 'esnext' o 'es2020'
    "target": "ES2022",   // Mínimo 'es2017' o 'esnext'
    "esModuleInterop": true,
    "lib": ["es2017", "dom"]  // Aseg
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
